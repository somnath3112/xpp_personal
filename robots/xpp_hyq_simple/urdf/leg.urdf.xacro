<?xml version="1.0" encoding="UTF-8"?>
<robot xmlns:xacro="http://www.ros.org/wiki/xacro">

	<!-- leg macro definiction -->
	<xacro:macro name="hyq_leg" params="name parent *origin reflect_hip reflect_upper reflect_front">
		<!-- Joints -->
		<!-- Hip assembly joint -->
		<joint name="${name}_haa_joint" type="revolute">
			<xacro:insert_block name="origin"/>
			<parent link="${parent}"/>
			<child  link="${name}_hipassembly"/>
			<axis xyz="0 0 1"/>
			<limit effort="150.0" velocity="12.0" lower="${-7*PI/18}" upper="${PI/6}"/>
		</joint>
		
		<!-- Upper leg joint -->
		<joint name="${name}_hfe_joint" type="revolute">
			<origin xyz="${d_tbb} 0 0" rpy="${reflect_upper*PI/2} 0 0"/>
			<parent link="${name}_hipassembly"/>
			<child  link="${name}_upperleg"/>
			<axis xyz="0 0 1"/>
			<limit effort="150.0" velocity="12.0"
          lower="${-(1+reflect_front)*5*PI/36-(1-reflect_front)*7*PI/36}"
          upper="${(1-reflect_front)*5*PI/36+(1+reflect_front)*7*PI/36}"/>
		</joint>

		<!-- Lower leg joint -->
		<joint name="${name}_kfe_joint" type="revolute">
			<origin xyz="${d_p1p2} 0 0" rpy="0 0 0"/>
			<parent link="${name}_upperleg"/>
			<child  link="${name}_lowerleg"/>
			<axis xyz="0 0 1"/>
			<limit effort="150.0" velocity="12.0"
          lower="${-(1+reflect_front)*7*PI/18+(1-reflect_front)*PI/18}"
          upper="${(1-reflect_front)*7*PI/18-(1+reflect_front)*PI/18}"/>
		</joint>

		<!-- Foot joint -->
		<joint name="${name}_foot_joint" type="fixed">
			<origin xyz="0.35 0 0" rpy="${PI/2} 0 ${-PI/2}"/>
			<parent link="${name}_lowerleg"/>
			<child  link="${name}_foot"/>
		</joint>


		<!-- Links -->
		<!-- Hip assembly link -->
		<link name="${name}_hipassembly">
			<visual>
				<origin xyz="0 0 0" rpy="${(1-reflect_hip)*PI/2} 0 0"/>
				<geometry>
					<mesh filename="package://xpp_hyq_simple/meshes/leg/hipassembly.dae" scale="1 1 1"/>
				</geometry>
			</visual>

			<collision> 
				<origin xyz="0 0 0" rpy="${(1-reflect_hip)*PI/2} 0 0"/> 
				<geometry> 
					<mesh filename="package://xpp_hyq_simple/meshes/leg/hipassembly.dae" scale="1 1 1"/>
				</geometry> 
			</collision>

			<inertial> 
				<origin xyz="0 0 0" rpy="${(1-reflect_hip)*PI/2} 0 0"/> 
            	<mass value="1.5"/> 
            	<inertia 
            	    ixx="0.018115" 
	                ixy="0" 
                	ixz="0" 
	                iyy="0.019663" 
                	iyz="0" 
                	izz="0.002808"/>
			</inertial>
		</link>
  		<gazebo reference="${name}_hipassembly">
    		<mu1>0.5</mu1>
		    <mu2>0.5</mu2>

    		<kp>1000.0</kp>
    		<kd>1000.0</kd>
    		<!--minDepth>0.001</minDepth-->
		    <!--maxVel>1.0</maxVel-->

		    <material>Gazebo/Chrome</material>
  		</gazebo>
		
		<!-- Upper leg link -->
		<link name="${name}_upperleg">
			<visual> 
				<origin xyz="0 0 0" rpy="${(1-reflect_front)*PI/2} 0 0"/>
				<geometry>
					<mesh filename="package://xpp_hyq_simple/meshes/leg/upperleg.dae" scale="1 1 1"/>
				</geometry>
			</visual>

			<collision> 
				<origin xyz="0 0 0" rpy="${(1-reflect_front)*PI/2} 0 0"/>
				<geometry> 
					<mesh filename="package://xpp_hyq_simple/meshes/leg/upperleg.dae" scale="1 1 1"/>
				</geometry> 
			</collision>

			<inertial> 
				<origin xyz="0 0 0" rpy="${(1-reflect_hip)*PI/2} 0 0"/> 
            	<mass value="1.2"/> 
            	<inertia 
            	    ixx="0.0012278" 
	                ixy="0" 
                	ixz="0" 
	                iyy="0.01629" 
                	iyz="0" 
                	izz="0.0163"/>
			</inertial>
		</link>
  		<gazebo reference="${name}_upperleg">
    		<mu1>0.5</mu1>
		    <mu2>0.5</mu2>

    		<kp>1000.0</kp>
    		<kd>1000.0</kd>
    		<!--minDepth>0.001</minDepth-->
		    <!--maxVel>1.0</maxVel-->

		    <material>Gazebo/Chrome</material>
  		</gazebo>
		
		<!-- Lower leg link -->
		<link name="${name}_lowerleg">
			<visual>
				<origin xyz="0 0 0" rpy="0 0 0"/>
				<geometry>
					<mesh filename="package://xpp_hyq_simple/meshes/leg/lowerleg.dae" scale="1 1 1"/>
				</geometry>
				<material name="white"/>
			</visual>

			<collision> 
				<origin xyz="0 0 0" rpy="0 0 0"/>
				<geometry> 
					<mesh filename="package://xpp_hyq_simple/meshes/leg/lowerleg.dae" scale="1 1 1"/>
				</geometry> 
			</collision>

			<inertial> 
				<origin xyz="0 0 0" rpy="0 0 0"/>
            	<mass value="0.1"/> 
            	<inertia 
            	    ixx="0.0005964" 
	                ixy="0" 
                	ixz="0" 
	                iyy="0.1012708" 
                	iyz="0" 
                	izz="0.012464"/>
			</inertial>
		</link>
  		<gazebo reference="${name}_lowerleg">
    		<mu1>0.5</mu1>
		    <mu2>0.5</mu2>

    		<kp>1000.0</kp>
    		<kd>1000.0</kd>
    		<!--minDepth>0.001</minDepth-->
		    <!--maxVel>1.0</maxVel-->

		    <material>Gazebo/Chrome</material>
  		</gazebo>	

		<!-- Foot link -->
		<link name="${name}_foot">
			<!--<visual>
				<origin xyz="0.0 0.0 0.0" rpy="0.0 0.0 0.0"/>
				<geometry>
					<sphere radius="0.021"/>
				</geometry>
			</visual>-->
		</link>
  		<gazebo reference="${name}_foot">
    		<mu1>10</mu1>
		    <mu2>10</mu2>

    		<kp>1000.0</kp>
    		<kd>1000.0</kd>
    		<!--minDepth>0.001</minDepth-->
		    <!--maxVel>1.0</maxVel-->

		    <material>Gazebo/Chrome</material>
  		</gazebo>

  		<!--Transmission-->
  		<!--Hip joint-->
		<transmission name="${name}_haa_joint_trans">
			<type>transmission_interface/SimpleTransmission</type>
			<joint name="${name}_haa_joint">
				<hardwareInterface>hardware_interface/EffortJointInterface</hardwareInterface>
			</joint>
			<actuator name="${name}_haa_joint_motor">
				<hardwareInterface>hardware_interface/EffortJointInterface</hardwareInterface>
				<mechanicalReduction>1</mechanicalReduction>
			</actuator> 
		</transmission>

  		<!--Upper leg joint-->
		<transmission name="${name}_hfe_joint_trans">
			<type>transmission_interface/SimpleTransmission</type>
			<joint name="${name}_hfe_joint">
				<hardwareInterface>hardware_interface/EffortJointInterface</hardwareInterface>
			</joint>
			<actuator name="${name}_hfe_joint_motor">
				<hardwareInterface>hardware_interface/EffortJointInterface</hardwareInterface>
				<mechanicalReduction>1</mechanicalReduction>
			</actuator> 
		</transmission>

  		<!--Lower leg joint-->
		<transmission name="${name}_kfe_joint_trans">
			<type>transmission_interface/SimpleTransmission</type>
			<joint name="${name}_kfe_joint">
				<hardwareInterface>hardware_interface/EffortJointInterface</hardwareInterface>
			</joint>
			<actuator name="${name}_kfe_joint_motor">
				<hardwareInterface>hardware_interface/EffortJointInterface</hardwareInterface>
				<mechanicalReduction>1</mechanicalReduction>
			</actuator> 
		</transmission>

	</xacro:macro>

</robot>
